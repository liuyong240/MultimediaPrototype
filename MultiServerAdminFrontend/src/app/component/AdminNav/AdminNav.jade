.navbar.navbar-default.navbar-fixed-top
    .container-fluid
        .navbar-header
            .navbar-brand(bind-html-unsafe="title")

        .collapse.navbar-collapse#bs-example-navbar-collapse-6
            ul.nav.navbar-nav
                li(ng-repeat="item in list",ng-class="{true: 'active'}[currentTab == item.key]")
                    a(ng-href="{{item.url}}")
                        i(class="{{item.icon}}", style="margin-right: 5px;")
                        |&nbsp;{{item.title}}

            ul.nav.navbar-nav.navbar-right
                li.nav-user.dropdown
                    a.dropdown-toggle(href="", ng-class="{dropactive : isShow}", ng-click="showMenu()"){{username}}
                        span.caret
                    ul.dropdown-menu(ng-show="isShow", style="display:block")
                        li
                            a(href="/auth/logout") 退出
                    //| Current date: {{ date | date:'yyyy-MM-dd' }}
